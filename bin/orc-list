#!/usr/bin/env ruby

$:.unshift(File.expand_path("../lib", __dir__))

require "orc"

orc = Orc::Client.new(:list)

all = false

if ARGV.first.nil?
  all = true
  prs = orc.search_pull_requests("is:open")
else
  author = ARGV.first
  prs    = orc.search_pull_requests("is:open author:#{author}")
end

if prs.count.zero?
  exit 0
end

padding = prs.map { |pr| pr.number.to_s.size }.max

prs.each do |pr|
  print pr.number.to_s.rjust(padding, " ")
  print "  "
  print pr.title.to_s

  if all
    print " (#{pr.username})"
  end

  puts
end

if all
  puts
  if prs.count == 1
    puts "#{prs.count} open pull request"
  else
    puts "#{prs.count} open pull requests"
  end
end

exit 0
